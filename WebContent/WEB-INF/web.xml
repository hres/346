<servlet>
<servlet-name>FCDR REST Service</servlet-name>
<servlet-class>
			org.glassfish.jersey.servlet.ServletContainer
</servlet-class>
<init-param>
	<param-name>
		jersey.config.server.provider.packages
	</param-name>
	<param-value>
		hc.fcdr.rws.service;hc.fcdr.rws.except
	</param-value>

	</init-param>
<init-param>
    <param-name>jersey.config.server.provider.classnames</param-name>
    <param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
</init-param>


<load-on-startup>1</load-on-startup>
</servlet>
<servlet-mapping>
<servlet-name>FCDR REST Service</servlet-name>
<url-pattern>/rest/*</url-pattern>
</servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>fcdr-rest-service</web-resource-name>
            <url-pattern>/dd/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>sodium-user</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>KEYCLOAK</auth-method>
        <realm-name>sodium-monitoring</realm-name>
    </login-config>

    <security-role>
        <role-name>sodium-user</role-name>
    </security-role>
</web-app>